{% extends 'base.html.twig' %}

{% block title %}Liste des annonces - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/ad/list.css') }}">
{% endblock %}

{% block body %}
    <h1>Nos annonces</h1>

    <div class="ads">
        {% for ad in ads %}
            <article class="ad">
                <div class="ad-picture">
                    <img src="{{ ad.picture }}" alt="{{ ad.name }}">
                </div>
                <div class="ad-summary">
                    <h2>{{ ad.name }}</h2>
                    <p>{{ ad.description|slice(0, 80) }} ...</p>
                    <p>Ajouter {{ ad.user.email }}</p>
                </div>
            </article>
            <div class="ad-action">
                <a href="{{ path('ad_show', {id: ad.id}) }}" class="button">En savoir plus</a>
            </div>
            {% endfor %}
    </div>
{% endblock %}