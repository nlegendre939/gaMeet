<!doctype html>
<html lang="en">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="stylesheet" href="css/app.css">
	</head>

	<body>
		<div class="text-center container">
			<img class="gaMeet" src="Images/gaMeet.png" alt="Responsive image">
    
			{% if app.user %}
				<div class="containerbtn">
					<a href="#">
						<i class="fas fa-user"></i>
						{{ app.user.nickname }}
					</a>
					<a href="{{ path('logout') }}">
						Déconnexion
					</a>
			{% else %} 
				<button class="btn" type="submit">
					<a href="{{ path('login_') }}">
						Connexion
					</a>
				</button>

				<button class="btn" type="submit"></button>

				<button class="btn" type="submit">
					<a href="{{ path('app_register') }}">
						Inscription
					</a>
				</button>
			</div>
			{% endif %}	
		</div>

		<div class="navbar">
			<nav class="navbar navbar-expand-lg text-center">
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarTogglerDemo01">
					<a class="navbar-brand" href="{{ path('main_index') }}">
						Accueil
					</a>

					<ul class="navbar-nav mr-auto mt-2 mt-lg-0">
						<li class="nav-item active" class="text-center">
							<a class="nav-link" href="#">
								Joueurs
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" href="#">
								Équipes
							</a>
						</li>

						<li class="nav-item">
							{# <a class="nav-link" href="{{ path('ad_list') }}"> #}
								Annonces
							</a>
						</li>

						<li class="nav-item">
							{# <a class="nav-link" href="{{ path('event_list') }}"> #}
								Événements
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" href="#">
								Actualités
							</a>
						</li>
					</ul>
				</div>
			</nav>
		</div>
	</body>
</html>