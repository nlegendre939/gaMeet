{% extends 'base.html.twig' %}

{% block title %}Page de contact Gameet!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/contact/index.css') }}">
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
        <h1>Contactez-nous</h1><br>
   
        
   
    {{ form_start(form) }}
    
    <div class="row d-flex justify-content-center">

        <div class="col-2">{{ form_row(form.question) }}<br>
    <div class="col-2">{{ form_row(form.name) }}<br>
      
        <div class="col-2"> {{ form_row(form.email) }}<br>
                </div> 

    <div class="row">
         
         <div class="col-2">{{ form_row(form.message) }}<br>
        </div>
        {{ form_rest(form) }}
        <div class="form-group">
       

        </div>
   
        <button class="g-recaptcha"
        data-sitekey=" 6LcqTnoeAAAAADp_Hvii_XrIWr6Ko6SGx5DfvGT7" 
       
      
   </div>

</div>

<script>
   function onSubmit(token) {
     document.getElementById("demo-form").submit();
   }
 </script>


<script src="https://www.google.com/recaptcha/api.js"></script>
    {{ form_end(form) }}
    
</div>
{% endblock %}
