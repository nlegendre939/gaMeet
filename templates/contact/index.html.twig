{% extends 'base.html.twig' %}

{% block title %}Page de contact Gameet!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Contactez-nous</h1>

  
   
    {{ form_start(form) }}
    
    <div class="row d-flex justify-content-center">
    <div class="col-2">{{ form_row(form.name) }}<br>
      
        <div class="col"> {{ form_row(form.email) }}<br>
                </div> 

    <div class="row">
         <div class="col">{{ form_row(form.question) }}<br>
         <div class="col">{{ form_row(form.message) }}<br>
        </div>
        {{ form_rest(form) }}
        <div class="form-group">
       

        </div>
    
    
    {{ form_end(form) }}
 
</div>
{% endblock %}
